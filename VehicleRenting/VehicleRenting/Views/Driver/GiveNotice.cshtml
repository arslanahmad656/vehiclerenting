@model VehicleRenting.Models.Notice

@{
    ViewBag.Title = "ReportIssue";
}

<header class="title text-left">
    <h1>
        Give notice here
    </h1>
    <hr />
</header>


@using (Html.BeginForm("GiveNotice", "Driver", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />
    @Html.Hidden("DriverId", (int)ViewBag.DriverId)
    <div>
    </div>

    <div class="form-group">
        <div class="label-box">
            @Html.LabelFor(model => model.NoticeDate, htmlAttributes: new { @class = "", type = "date" })
        </div>
        <div class="input-box">
            @Html.EditorFor(model => model.NoticeDate, new { htmlAttributes = new { @class = "", type = "date" } })
        </div>
    </div>

    <div class="form-group">
        <div class="label-box">
            @Html.LabelFor(model => model.CheckoutDate, htmlAttributes: new { @class = "", type = "date" })
        </div>
        <div class="input-box">
            @Html.EditorFor(model => model.CheckoutDate, new { htmlAttributes = new { @class = "", type = "date" } })
        </div>
    </div>

    <div class="form-group">
        <div class="label-box" style="vertical-align: top">
            @Html.LabelFor(model => model.Reason, htmlAttributes: new { @class = "" })
        </div>
        <div class="input-box">
            @Html.TextAreaFor(model => model.Reason, new { @class = "", rows = 7 })
        </div>
    </div>

    <div class="form-group">
        <div class="label-box">
            &nbsp;
        </div>
        <div class="input-box">
            <input type="submit" value="Report" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
