@model VehicleRenting.Models.vehiclerequest

@{
    ViewBag.Title = "RequestVehicle";
}


@using (Html.BeginForm("RequestVehicle", "Driver", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div>
        <p>
            @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
        </p>
    </div>
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />
    @Html.Hidden("DriverId", 2);
    <br />
    @Html.Hidden("RequestDate", DateTime.Now)
    <br />
    @Html.Hidden("status", true)
    

    <div class="form-group">
        <div class="label-box">
            @Html.LabelFor(model => model.VehicleId, "VehicleId", htmlAttributes: new { @class = "" })
        </div>
        <div class="input-box" style = "vertical-align: top">
            @Html.DropDownList("VehicleId", null, htmlAttributes: new { @class = "form-control" })
            <input type="submit" value="Request" class="btn btn-primary" style="display: block" />
        </div>
    </div>

    

    <div class="form-group" style="text-align: left;">
        <div class="label-box" style="vertical-align: top;">
            &nbsp;
        </div>
        <div class="input-box">
            
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
