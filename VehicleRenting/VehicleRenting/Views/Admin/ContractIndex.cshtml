@model IEnumerable<VehicleRenting.Models.Contract>

@{
    ViewBag.Title = "ContractIndex";
}

<style>
    
</style>

<header class="title">
    <h1>Contracts List</h1>
</header>

<p>
    @Html.ActionLink("Create New", "CreateContract")
</p>

@if(Model.Count() == 0)
{
    <h3 title="Create new contract by clicking 'Create New'" class="text-danger">Sorry! There are currently no contracts available.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.RegistrationNo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle.RegistrationNo)
                    </td>
                    <td>
                        <a title="Edit Details" href="@Url.Action("EditContract", new { id = item.Id })">
                            <span class = "fa fa-pencil-square-o"></span>
                        </a>

                        <a title="View Details" href="@Url.Action("ContractDetails", new { id = item.Id })">
                            <span class="fa fa-file-text-o"></span>
                        </a>

                        <a title="Delete" href="@Url.Action("DeleteContract", new { id = item.Id })">
                            <span class="fa fa fa-trash-o"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}

@section Scripts {
    <script>
        $('#link-contract').addClass('active');
    </script>
}