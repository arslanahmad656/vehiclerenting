@model VehicleRenting.Models.proprietor

@{
    ViewBag.Title = "CreateProprietor";
}

<header class="title text-left">
    <h1>Create a Proprietor</h1>
    <hr />
</header>


@using (Html.BeginForm("CreateProprietor", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</p>
    </div>

        <div class="form-group">
            <div class="label-box">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "" })
            </div>
            <div class="input-box">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "" } })
            </div>
        </div>

        <div class="form-group">
            <div class="label-box" style="vertical-align: top;">
                &nbsp;
            </div>
            <div class="input-box">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-warning" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
