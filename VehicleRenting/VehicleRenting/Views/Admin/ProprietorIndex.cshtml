@model IEnumerable<VehicleRenting.Models.proprietor>

@{
    ViewBag.Title = "ProprietorIndex";
}

<header class="title text-left">
    <h1>Proprietors</h1>
    <hr />
</header>

<p>
    @Html.ActionLink("Create New", "CreateProprietor")
</p>
@if (Model.Count() == 0)
{
    <h3 title="Create new proprietor by clicking 'Create New'" class="text-danger">Sorry! There are currently no proprietors available.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sr.</th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int count = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(++count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditProprietor", new { id = item.Id }) |
                        @Html.ActionLink("Details", "ProprietorDetails", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteProprietor", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
