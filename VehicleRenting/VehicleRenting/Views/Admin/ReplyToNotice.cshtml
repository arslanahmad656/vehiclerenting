@model VehicleRenting.Models.noticereply

@{
    ViewBag.Title = "ReportIssue";
}

<header class="title text-left">
    <h1>
        Reply to Notice
    </h1>
    <hr />
</header>


@using (Html.BeginForm("ReplyToNotice", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />
    @Html.Hidden("NoticeId", (int)ViewBag.NoticeId)
    <br />
    @Html.Hidden("replydate", DateTime.Now)
    <div>
    </div>

    <div class="form-group">
        <div class="label-box" style="vertical-align: top">
            @Html.LabelFor(model => model.reply, htmlAttributes: new { @class = "" })
        </div>
        <div class="input-box">
            @Html.TextAreaFor(model => model.reply, new { @class = "", rows = 7 })
        </div>
    </div>

    <div class="form-group">
        <div class="label-box">
            &nbsp;
        </div>
        <div class="input-box">
            <input type="submit" value="Reply" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
