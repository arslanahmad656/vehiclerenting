@model VehicleRenting.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
    
</style>

<header class="title">
    <h1>Sign Up</h1>
</header>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-primary", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new {  })
    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", autofocus = "autofocus"  })
    @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })
    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", type = "password" })
    @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", type = "password" })
    <input type="submit" class="" value="Register" />
    <div class="horizontal">
        <p class="form-center">
            Already have an account? @Html.ActionLink("Sign In", "Login", "Account")
        </p>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
