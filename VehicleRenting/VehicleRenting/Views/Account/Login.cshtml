@using VehicleRenting.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<header class="title">
    <h1>Log In</h1>
</header>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-primary" }))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", autofocus = "autofocus" })
    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", type = "password" })
    <div class="horizontal">
        <p class="form-left">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </p>
        <p class="form-right">
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>
    </div>
    <input type="submit" value="Log in" class="btn btn-default" />
    <div class="horizontal">
        <p class="form-center">
            Don't have an account? @Html.ActionLink("Sign Up", "Register", "Account")
        </p>
    </div>

                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
}
